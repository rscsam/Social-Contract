<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="jd7337.socialcontract.controller.fragment.EditInterestProfilePromptFragment">

    <TextView
        android:id="@+id/edit_interest_profile_prompt_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fill_out_an_interest_profile_to_start_connecting_with_cool_content"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintVertical_bias="0.25"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_interest_profile_prompt_tv"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:id="@+id/interest_checkboxes_ll">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/music"
            android:buttonTint="@color/white"
            android:textColor="@color/white"
            android:id="@+id/music_interest_cb"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/food"
            android:buttonTint="@color/white"
            android:textColor="@color/white"
            android:id="@+id/food_interest_cb"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/movies"
            android:buttonTint="@color/white"
            android:textColor="@color/white"
            android:id="@+id/movies_interest_cb"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/video_games"
            android:buttonTint="@color/white"
            android:textColor="@color/white"
            android:id="@+id/video_games_interest_cb"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sports"
            android:buttonTint="@color/white"
            android:textColor="@color/white"
            android:id="@+id/sports_interest_cb"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/news"
            android:buttonTint="@color/white"
            android:textColor="@color/white"
            android:id="@+id/news_interest_cb"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/memes"
            android:buttonTint="@color/white"
            android:textColor="@color/white"
            android:id="@+id/memes_interest_cb"/>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
