<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="jd7337.socialcontract">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".controller.activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".controller.activity.RegistrationActivity">
        </activity>
        <activity android:name=".controller.activity.MainActivity">
        </activity>
        <activity android:name=".controller.activity.ForgotPasswordActivity">
        </activity>
        <activity
            android:name=".controller.activity.TutorialActivity"
            android:label="@string/title_activity_tutorial"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".controller.activity.TwitterTimelineActivity">
        </activity>
        <activity android:name=".controller.activity.InstagramFeedActivity">
        </activity>
    </application>

</manifest>